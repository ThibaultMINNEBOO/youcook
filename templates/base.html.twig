<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Accueil{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="icon" href="{{ asset('img/logo.png') }}">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="{{ asset('css/base.css') }}" rel="stylesheet"/>
    {% block stylesheets %}

    {% endblock %}
    {% block javascripts %}
    {% endblock %}

</head>
<body>
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img class="home_logo" src="{{ asset('img/logo.png') }}" alt="#" height="75px">YouCook
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="search-bar">
                <form class="form d-flex" role="search" action="">
                    <div class="dropdown">
                        <button class="cat-menu btn dropdown-toggle d-flex" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Catégories
                        </button>
                        <div class="dropdown-menu" >
                            <ul class="filter list-unstyled">
                                {% for category in categories %}
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_recipe_category_show', {'id': category.id}) }}">{{ category.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <input name="search" class="form-control" type="search" placeholder="Rechercher..." aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">
                        <img class="loop" src="{{ asset ('img/loop.png') }}">
                    </button>
                </form>
            </div>
            <div class="dropdown">
                <button class="user-menu btn d-flex" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="{{ asset('img/default_user.png') }}" alt="#" height="75px">
                </button>
                <div class="user-list dropdown-menu">
                    <ul class="list-unstyled">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}

                        <li>
                            <a class="dropdown-item" href="{{ path('app_user_profile') }}">Profil</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_recipe_create') }}">Création recette</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>
{% block body %}
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
</body>
</html>
