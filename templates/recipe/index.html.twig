{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Liste des recettes</h1>
    <div class="container">
        <div class="row">
            {% for recipe in recipes %}
                <div class="col-md-auto">
                    <div class="card" style="width: 18rem; margin: 10px;">
                        <a href="{{ path('app_recipe_show', {id: recipe.id}) }}">
                        <img class="card-img-top" src="{{ asset('img/recipe-default.png') }}" alt="{{ recipe.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ recipe.name | u.truncate(50, '...') }}</h5>
                            <p>{{ recipe.description | u.truncate(50, '...') }}</p>
                            <p>{{ recipe.user.firstname }} {{ recipe.user.lastname }}</p>
                        </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
